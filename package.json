{
  "name": "postcss-parts",
  "version": "1.0.0",
  "description": "PostCSS plugin CSS Splitter",
  "keywords": ["postcss", "css", "postcss-plugin", "postcss-parts"],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Thomas Weiler <tw@interactive-pioneers.de>",
  "license": "MIT",
  "repository": "sinescape/postcss-css-splitter",
  "engines": {
    "node": ">=12.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.0"
  },
  "devDependencies": {
    "clean-publish": "^3.4.2",
    "eslint": "^8.0.1",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "postcss": "^8.4.14"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": ["eslint:recommended", "plugin:jest/recommended"],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 10
      }
    }
  }
}
